@model IEnumerable<IndexViewModel>
@{
    ViewBag.Title = "All Weapon";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var weapon in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;" src="~/Uploads/@weapon.FrontImagePath" alt="Weapon Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@weapon.Name</h5>
                <p class="mb-0">Engineered by: @weapon.Engineer</p>
                <p class="mb-0">Rating: @weapon.Rating</p>
                <p >Category: @weapon.Type</p>
            </div>

            <form class="input-group-sm" asp-controller="Book" asp-action="AddToCollection" asp-route-id="@weapon.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            <a href="/Book/Edit/@weapon.Id" class="btn btn-warning">Edit</a>
        </div>
    }
</div>
